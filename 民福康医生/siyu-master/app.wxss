.border{
  content: "";
  position: absolute;
  left: 50%;
  bottom: 0rpx;
  border-radius: 44rpx;
  width: 0;
  height: 6rpx;
  background: #53a2ef;
  transition: all .2s;
}

.borderhover{
  content: "";
  width: 100%;
  height: 5rpx;
  bottom: 0rpx;
  border-radius: 44rpx;
  position: absolute;
  left: 0;
  right: 0;
  background: #53a2ef;
  transition: all .2s;
}

/* 模态框 */
.doctor-content{
    width: 90%;
    margin: auto;
}
.toast-box{
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    min-height: 100vh;
    background: rgba(0,0,0,.5);
    z-index: 99;
}
.toast-box-content{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 85%;
    background: #ffffff;
    border-radius: 20rpx;
}
.toast-box-content-title{
    padding: 80rpx 0 50rpx 0;
    font-size: 36rpx;
    color: #333333;
    text-align: center;
    font-weight: 500;
    
}
.toast-box-content-item{
    font-size: 28rpx;
    color: #333333;
    width: 85%;
    margin: auto;
    line-height: 50rpx;
    margin-bottom: 26rpx;
}
.toast-box-content-btn{
    text-align: center;
    padding: 40rpx 0;
    font-size: 36rpx;
    color: #6ea3f7;
    border-top: 1rpx solid #e2e2e2;
    margin-top: 66rpx;
}
.delicon{
    width: 34rpx;
    height: 34rpx;
    position: absolute;
    right: 40rpx;
    top: 40rpx;
}
.gotop{
    width: 90rpx;
    height: 90rpx;
    position: fixed;
    bottom: 130rpx;
    right: 50rpx;
}
