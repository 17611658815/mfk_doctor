.page-body {
  display: flex;
  flex: 1;
  margin-bottom: 98rpx;
  flex-direction: column;
  background: #f8f8f8;
}
/* 疾病信息 */
.color{
  width: 100%;
  background: #ffffff;
}
.doctorInfo{
  background: #FFFFFF;
}
.videoTitle{
  width: 92%;
  padding: 40rpx 0;
  margin: auto;
  border-bottom: 1rpx solid #e2e2e2;
}
.videoTitle>view:nth-child(1){
  font-size: 36rpx;
  color: #000000;
  font-weight: 500;
  margin-bottom: 20rpx;
}
.videoTitle>view:nth-child(2)>text{
  color: #999999;
  font-size: 20rpx;
  /* text-indent: 2em; */
}
.videoTitle>view:nth-child(2)>text:nth-child(1){
  font-size: 26rpx;
  margin-right: 40rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(2){
  margin-right: 5rpx;
   font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(3){
  margin-right: 30rpx;
   font-size: 26rpx;
}
