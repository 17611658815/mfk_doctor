/* pages/audio/audio.wxss */

.page-body {
    display: flex;
    flex: 1;
    flex-direction: column;
    background: #f8f8f8;
}
.button{
    width: 123rpx;
    height: 58rpx;
    text-align: center;
    line-height: 58rpx;
    color: white;
    font-size: 28rpx;
    border-radius: 44px 44px 44px 44px;
    background: #6ea7f7;
}
/* 疾病信息 */

.color {
    width: 100%;
    background: #fff;
}

.doctorInfo {
    background: #fff;
}

.videoTitle {
    width: 92%;
    padding: 40rpx 0;
    margin: auto;
    border-bottom: 1rpx solid #e2e2e2;
}

.videoTitle>view:nth-child(1) {
    font-size: 36rpx;
    color: #000;
    font-weight: 500;
    margin-bottom: 20rpx;
}

.videoTitle>view:nth-child(2)>text {
    color: #999;
    font-size: 20rpx;
    /* text-indent: 2em; */
}

.videoTitle>view:nth-child(2)>text:nth-child(1) {
    font-size: 26rpx;
    margin-right: 40rpx;
}

.videoTitle>view:nth-child(2)>text:nth-child(2) {
    margin-right: 5rpx;
    font-size: 26rpx;
}

.videoTitle>view:nth-child(2)>text:nth-child(3) {
    margin-right: 30rpx;
    font-size: 26rpx;
}

/* 疾病信息 */

/* 医生信息 */

.InfoBox {
    width: 92%;
    margin: auto;
    display: flex;
    padding-top: 50rpx;
    padding-bottom: 50rpx;
    align-items: center;
}

.userPic {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
    overflow: hidden;
}

.userPic image {
    width: 90rpx;
    height: 90rpx;
}

.InfoBox>view:nth-child(2) {
    flex: 1;
    margin-left: 38rpx;
}

.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(1) {
    font-size: 32rpx;
    color: #000;
    padding-right: 10rpx;
}

.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(2) {
    font-size: 28rpx;
    color: #666;
}

.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(1) {
    font-size: 28rpx;
    color: #999;
    padding-right: 20rpx;
}

.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(2) {
    font-size: 28rpx;
    color: #999;
}

/* 视频内容 */

.title {
    width: 92%;
    margin: auto;
    font-size: 32rpx;
    color: #000;
}

.title>view:nth-child(1) {
    padding-bottom: 25rpx;
    font-size: 32rpx;
    color: #000;
    margin-top: 50rpx;
}

/*开关背景颜色  */

.audiosBox {
    width: 92%;
    margin: auto;
    height: 130rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: #f6f7f7;
    border-radius: 10rpx;
}

/*按钮大小  */

.audioOpen {
    width: 70rpx;
    height: 70rpx;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 20rpx;
}

.audioOpen image {
    width: 100%;
    height: 100%;
}

/*进度条长度  */

.slid {
    flex: 1;
    position: relative;
}

.slid view {
    display: flex;
    justify-content: space-between;
}

.slid view>text:nth-child(1) {
    color: #4c9dee;
    margin-left: 6rpx;
}

.slid view>text:nth-child(2) {
    margin-right: 6rpx;
}

slider {
    width: 520rpx;
    margin: 0;
    margin-left: 35rpx;
}

/*横向布局  */

.times {
    width: 100rpx;
    text-align: center;
    display: inline-block;
    font-size: 24rpx;
    color: #999;
    margin-top: 5rpx;
}

/* 审核状态 */

.status {
    width: 100%;
    background: #f8f8f8;
    padding: 26rpx 0;
    font-size: 28rpx;
    color: #ff973b;
}

.status > view {
    width: 95%;
    margin: auto;
}

.status2 > view {
    width: 95%;
    margin: auto;
    display: flex;
    justify-content: space-between;
}

.status2 {
    width: 100%;
    background: #f8f8f8;
    padding: 26rpx 0;
    font-size: 28rpx;
    color: #ff973b;
}

.no_tetx {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.textaerBox {
    width: 100%;
    height: 350rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 30rpx;
    color: #000;
    background: #fff;
    margin-bottom: 10rpx;
   
}

.textaerBox textarea {
    width: 93%;
    padding: 20rpx;
    height: 320rpx;
    background: #f8f8f8;
     font-size: 30rpx;
    line-height: 26px;
    color: #666;
}

.placActive {
    color: #999;
    font-size: 28rpx;
}

.submit {
    width: 50%;
    height: 100rpx;
    font-size: 34rpx;
    line-height: 100rpx;
    border-radius: 10rpx;
    text-align: center;
    background: linear-gradient(#6eaff7, #6e9ff7);
    color: #fff;
     margin: 30rpx auto;
}
