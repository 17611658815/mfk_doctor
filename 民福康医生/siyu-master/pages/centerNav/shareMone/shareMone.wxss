.share-content{
    width: 90%;
    margin: auto;
}
.answerList-content{
    /* padding: 40rpx 0; */
    border-bottom: 1rpx solid #e2e2e2;
}
.answerList-content-title{
    font-size: 32rpx;
    color: #000000;
}
.answerList-content-timer{
    font-size: 24rpx;
    color: #999999;
    margin-top: 18rpx;
}
.answerList-content-timer text{
    margin-right: 20rpx;
}

.InfoBox{
  width: 100%;
  margin:auto;
  display: flex;
  padding-top: 50rpx;
  padding-bottom: 50rpx;
  align-items: center;
}
.InfoBox>view:nth-child(1){
  width: 105rpx;
  height: 105rpx;
}
.InfoBox>view:nth-child(1) image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.InfoBox>view:nth-child(2){
  flex: 1;
  margin-left: 38rpx;
}
.doc_hospital{
    display: flex;
    align-items: center;
    justify-content: space-between;
}
.doc_hospital_name{
    font-size: 24rpx;
     color: #666666;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(1){
  font-size: 32rpx;
  color: #333333;
  padding-right: 10rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(2){
  font-size: 28rpx;
  color: #666666;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(1){
  font-size: 28rpx;
  color: #999999;
  padding-right: 20rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(2){
  font-size: 28rpx;
  color: #999999;
}