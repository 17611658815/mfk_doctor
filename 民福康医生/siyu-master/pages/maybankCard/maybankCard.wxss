/* pages/maybankCard/maybankCard.wxss */

.bank_title{
    width: 100%;
    background: #f8f8f8;
    padding: 26rpx 0;
    font-size: 28rpx;
    color: #ff973b;
    text-align: center;
}
.inptBox{
    width: 90%;
    margin: auto;
    padding: 30rpx 0;
    display: flex;
    align-items: center;
    border-bottom: 1rpx solid #e2e2e2;
}
.input{
  height: 30rpx;
  line-height: 30rpx;
  font-size: 30rpx;
  color: #666666;
  padding: 0;
  text-align: right;
}
.inptBox_leaber{
    min-width: 150rpx;
    font-size: 30rpx;
}
.inptBox_val{
    flex: 1;
    margin-left: 20rpx;
}
.phcolor{  
  color: #999999;  
}
.addBtn{
    width: 630rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #ffffff;
    background: #6ea8f7;
    font-size: 34rpx;
    margin-top: 150rpx;
    border-radius: 44px 44px 44px 44px;

}

.headers{
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* color: #6ea8f7; */
  font-size: 34rpx;
}
.headers>view{
  text-align: center;
}
.headers image{
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 10rpx;
}
.bank_btnBox{
    width: 90%;
    margin: auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 100rpx;
}
.bank_btnBox>view:nth-child(2){
    width: 45%;
    height: 100rpx;
    font-size: 34rpx;
    line-height: 100rpx;
    border-radius: 44px 44px 44px 44px;
    text-align: center;
    background: linear-gradient(#6EAFF7, #6E9FF7);
    color: #ffffff;
}
.bank_btnBox>view:nth-child(1){
    width: 45%;
    height: 100rpx;
    font-size: 34rpx;
    line-height: 100rpx;
    border-radius: 44px 44px 44px 44px;
    text-align: center;
    border: 1rpx solid #6E9FF7;
    color: #6E9FF7;
}