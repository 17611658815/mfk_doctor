/* pages/article/article.wxss */
.page-body {
  display: flex;
  flex: 1;
  margin-bottom: 98rpx;
  flex-direction: column;
  background: #f8f8f8;
  border-top: 1rpx solid #e2e2e2;
}

/* 标题 */
.color{
  width: 100%;
  /* padding-top: 36rpx; */
  background: #ffffff;
  
}
.doctorInfo{
  background: #FFFFFF;
}

.videoTitle{
  width: 92%;
  padding-top: 36rpx;
  padding-bottom: 50rpx;
  /* height: 150rpx; */
  margin: auto;
  border-bottom: 1rpx solid #e2e2e2;
}
.videoTitle>view:nth-child(1){
  font-size: 36rpx;
  color: #000000;
  margin-bottom: 10rpx;
}
.videoTitle>view:nth-child(2)>text{
  color: #999999;
  font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(1){
  margin-right: 5rpx;
  font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(2){
  margin-right: 5rpx;
   font-size: 26rpx;
}
.videoTitle>view:nth-child(2)>text:nth-child(3){
  margin-right: 30rpx;
   font-size: 26rpx;
}
/* 医生信息 */
.InfoBox{
  width: 92%;
  margin:auto;
  display: flex;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  align-items: center;
}
.InfoBox>view:nth-child(1){
  width: 90rpx;
  height: 90rpx;
}
.InfoBox>view:nth-child(1) image{
  border-radius: 50%;
  width: 100%;
  height: 100%;
}
.InfoBox>view:nth-child(2){
  flex: 1;
  margin-left: 38rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(1){
  font-size: 32rpx;
  color: #333333;
  padding-right: 10rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(1)>text:nth-child(2){
  font-size: 28rpx;
  color: #666666;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(1){
  font-size: 28rpx;
  color: #666666;
  padding-right: 20rpx;
}
.InfoBox>view:nth-child(2)>view:nth-child(2)>text:nth-child(2){
  font-size: 28rpx;
  color: #999999;
}

.title image{
  display: none
}
.title{
    width: 95%;
    margin: auto;
}
.title view{
    width: 100%;
    font-size:28rpx;
    color:#666666;
    text-indent:2em;
    line-height:1.8;
    letter-spacing:1rpx
}
.title view:nth-child(1){
    margin-top: 50rpx;
}